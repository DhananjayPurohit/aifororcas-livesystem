@if (DisplayModal)
{
	<div class="modal-backdrop show"></div>

	<div class="modal fade show" id="exampleModal" tabindex="-1"
		 role="dialog" aria-labelledby="exampleModalLabel"
		 aria-hidden="true" style="display: block;">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<EditForm Model="Candidate" OnValidSubmit="OnConfirm">
					<div class="modal-header">
						<h5 class="modal-title">
							Approve Candidate
						</h5>
						<button @onclick="OnCancel" type="button" class="close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						<div class="form-group">
							<label>ID:</label>
							<p class="form-control">@Candidate.Id</p>
						</div>
						<div class="form-group">
							<label>Timestamp:</label>
							<p class="form-control">@Candidate.Timestamp</p>
						</div>
						<div class="form-group">
							<label>Node:</label>
							<p class="form-control">@Candidate.Node</p>
						</div>
						<div class="form-group">
							<label>Tags:</label>
							<p class="form-control">@Candidate.TagString</p>
						</div>
						<div class="form-group">
							<label>Approval Comments:</label>
							<InputTextArea class="form-control" @bind-Value="@Candidate.ApprovalComments"/>
						</div>

					</div>
					<div class="modal-footer">
						<button @onclick="OnCancel" type="button" class="btn btn-secondary">Cancel</button>
						<button @onclick="OnConfirm" type="button" class="btn btn-primary">Ok</button>
					</div>
				</EditForm>
			</div>
		</div>
	</div>
}
@code {
	[Parameter] public bool DisplayModal { get; set; }
	[Parameter] public Candidate Candidate { get; set; }
	[Parameter] public EventCallback OnConfirm { get; set; }
	[Parameter] public EventCallback OnCancel { get; set; }
	public void Show() => DisplayModal = true;
	public void Hide() => DisplayModal = false;
}


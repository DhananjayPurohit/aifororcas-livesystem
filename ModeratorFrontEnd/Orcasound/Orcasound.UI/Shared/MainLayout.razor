@inherits LayoutComponentBase
<nav class="navbar navbar-expand-sm orca-bg-purple orca-navbar">
	<a class="navbar-brand orca-navbar-brand orca-header-text" href="/">AIForOrcas</a>
	<div class="collapse navbar-collapse">
		<span class="navbar-nav mr-auto">
		</span>
		<span class="orca-nav-item">@DateConverter.ToPDT(DateTime.Now)</span>
		<span class="orca-pipe">|</span>
		<AuthorizeView>
			<Authorized>
				<span class="orca-nav-item">Hello, @context.User.Identity.Name</span>
				<span class="orca-pipe">|</span>
				<a class="orca-nav-item" href="AzureAD/Account/SignOut">Log out</a>
				<div class="orca-nav-avatar" style="margin-right:-16px;">
					<img src="../images/avatar.png" />
				</div>
			</Authorized>
			<NotAuthorized>
				<a class="orca-nav-item" href="AzureAD/Account/SignIn">Log in</a>
			</NotAuthorized>
		</AuthorizeView>
	</div>
</nav>

<div class="container-fluid">
	<div class="row h-100">
		<div class="col-lg-1 orca-bg-gray orca-sidenav">
			<div class="orca-sidenav-item">
				<a class="orca-text-darkgray orca-text-active" href="#">Home</a>
			</div>
			<div class="orca-sidenav-item">
				<a class="orca-sidenav-item orca-text-darkgray" href="#">Hydrophones</a>
			</div>
			<div class="orca-sidenav-item">
				<a class="orca-sidenav-item orca-text-darkgray" href="#">Orca directory</a>
			</div>
			<div class="orca-sidenav-item">
				<a class="orca-sidenav-item orca-text-darkgray" href="#">Get involved</a>
			</div>
			<div class="orca-sidenav-item">
				<a class="orca-sidenav-item orca-text-darkgray" href="#">About OrcaHello</a>
			</div>
		</div>
		<div class="col-lg-11 offset-lg-1" style="padding-top:12px;padding-left:25px;">
@Body
		</div>
	</div>
</div>

<div id="details-view"></div>

